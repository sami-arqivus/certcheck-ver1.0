# Enhanced Authentication Configuration for CertCheck
# Copy this file to .env and update with your actual values

# Database Configuration
DB_NAME=certcheck
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
SECRET_KEY=your-super-secure-secret-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BUCKET_NAME=certcheck-users

# Rate Limiting Configuration
RATE_LIMIT_USER_LOGIN=5
RATE_LIMIT_USER_LOGIN_WINDOW=15
RATE_LIMIT_ADMIN_LOGIN=3
RATE_LIMIT_ADMIN_LOGIN_WINDOW=15
RATE_LIMIT_USER_REGISTER=3
RATE_LIMIT_USER_REGISTER_WINDOW=60
RATE_LIMIT_FORGOT_PASSWORD=3
RATE_LIMIT_FORGOT_PASSWORD_WINDOW=60
RATE_LIMIT_RESET_PASSWORD=5
RATE_LIMIT_RESET_PASSWORD_WINDOW=15
RATE_LIMIT_REFRESH_TOKEN=10
RATE_LIMIT_REFRESH_TOKEN_WINDOW=15

# Account Security Configuration
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Audit Logging Configuration
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=INFO

# Cleanup Configuration
CLEANUP_INTERVAL_MINUTES=15
CLEANUP_FULL_INTERVAL_HOURS=1
CLEANUP_AUDIT_INTERVAL_HOURS=6
CLEANUP_ACCOUNT_UNLOCK_INTERVAL_MINUTES=30

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_TOKEN_BLACKLISTING=true

# reCAPTCHA Configuration (optional)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
ENABLE_RECAPTCHA=false

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@certcheck.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/Users/arqivus1/Desktop/Arq_CC/certcheck/certcheck-ver1.0/logs/
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Performance Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30
ALERT_EMAIL=admin@certcheck.com
ENABLE_ALERTS=true
